<p id="notice"><%= notice %></p>

<div class="table-header">
<h1>Prescriptions</h1> 
<%= link_to 'Add Prescription', new_prescription_path %>

<img src="https://cdn-icons-png.flaticon.com/512/1686/1686771.png"></img>

</div>

  <table class="prescriptions">
    <thead class="thead-dark">
      <tr>
        <th>Prescription Name</th>
        <th>Dosage</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <% @prescriptions.each do |prescription| %>
          <tr>
            <td><%= prescription.name %></td>
            <td><%= prescription.dosage %></td>
            <td><%= link_to 'Show', prescription %></td>
            <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
            <td><%= link_to 'Delete', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  </table>
<%= will_paginate(@things, :renderer => WillPaginate::ActionView::LinkRenderer) %>
